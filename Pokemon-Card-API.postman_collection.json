                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/skus/{{skuId}}/toggle-status",
              "host": ["{{baseUrl}}"],
              "path": ["skus", "{{skuId}}", "toggle-status"]
