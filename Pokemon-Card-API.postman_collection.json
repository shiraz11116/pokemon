        },
        {
          "name": "Create New SKU",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Pokemon Booster Pack - Paldea Evolved\",\n  \"sku\": \"POKEMON-PE-BP-001\",\n  \"category\": \"booster-pack\",\n  \"targetPrice\": 3.99,\n  \"maxPrice\": 5.99,\n  \"priority\": \"high\",\n  \"websites\": [\n    {\n      \"name\": \"target\",\n      \"url\": \"https://www.target.com/p/pokemon-cards-example\",\n      \"selector\": {\n        \"price\": \"[data-test=\\\"product-price\\\"]\",\n        \"availability\": \"[data-test=\\\"fulfillment-add-to-cart\\\"]\",\n        \"addToCart\": \"[data-test=\\\"shipItButton\\\"]\"\n      },\n      \"isActive\": true\n    },\n    {\n      \"name\": \"pokemoncenter\",\n      \"url\": \"https://www.pokemoncenter.com/product/example\",\n      \"selector\": {\n        \"price\": \".price\",\n        \"availability\": \".add-to-cart\",\n        \"addToCart\": \".add-to-cart\"\n      },\n      \"isActive\": true\n    }\n  ],\n  \"purchaseSettings\": {\n    \"maxQuantity\": 2,\n    \"autoPurchase\": true,\n    \"requireConfirmation\": false\n  },\n  \"metadata\": {\n    \"set\": \"Paldea Evolved\",\n    \"series\": \"Scarlet & Violet\",\n    \"rarity\": \"Common\",\n    \"language\": \"English\",\n    \"condition\": \"New\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/skus",
              "host": ["{{baseUrl}}"],
              "path": ["skus"]
            }
          }
        },
        {
          "name": "Get Single SKU",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/skus/{{skuId}}",
              "host": ["{{baseUrl}}"],
              "path": ["skus", "{{skuId}}"]
            }
          }
        },
        {
          "name": "Update SKU",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
