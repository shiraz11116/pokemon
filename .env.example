# Environment Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/pokemon-cards
DB_NAME=pokemon-cards

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Pokemon Card System <your-email@gmail.com>

# Encryption Key for Credit Cards
ENCRYPTION_KEY=your-256-bit-encryption-key-change-this

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Scraping Configuration
SCRAPER_DELAY_MIN=2000
SCRAPER_DELAY_MAX=5000
USER_AGENTS_ROTATION=true
PROXY_ROTATION=false

# Purchase Configuration
AUTO_PURCHASE_ENABLED=false
MAX_PURCHASE_AMOUNT=500
PURCHASE_CONFIRMATION_REQUIRED=true

# Notification Settings
EMAIL_NOTIFICATIONS=true
PURCHASE_SUCCESS_EMAIL=true
PURCHASE_FAILURE_EMAIL=true
SYSTEM_ERROR_EMAIL=true