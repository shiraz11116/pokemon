{
  "name": "pokemon-card-auto-buyer",
  "version": "1.0.0",
  "description": "Automated Pokemon card purchasing system with web scraping and admin dashboard",
  "main": "server.js",
  "scripts": {
    "start": "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true node server.js",
    "dev": "nodemon server.js",
    "build": "npm run install:client && npm run build:client",
    "build:client": "cd pokemon-dashboard && npm run build",
    "install:client": "cd pokemon-dashboard && npm install",
    "install:all": "npm install && npm run install:client",
    "postinstall": "echo 'Skipping Chromium download for deployment'",
    "scraper": "node src/scrapers/scraperManager.js",
    "purchaser": "node src/purchaser/purchaserManager.js",
    "test": "jest"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": ["pokemon", "cards", "automation", "scraping", "purchasing"],
  "author": "Pokemon Card Auto Buyer System",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^6.12.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "puppeteer": "^21.1.1",
    "playwright": "^1.37.1",
    "cheerio": "^1.0.0-rc.12",
    "axios": "^1.6.8",
    "nodemailer": "^6.9.4",
    "crypto-js": "^4.1.1",
    "winston": "^3.10.0",
    "node-cron": "^3.0.2",
    "express-rate-limit": "^6.9.0",
    "joi": "^17.9.2",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "@types/node": "^20.5.7"
  }
}